# Job Bot Environment Configuration
# Copy this file to .env and customize for your environment

# ======================
# Database Configuration
# ======================
POSTGRES_DB=jobbot
POSTGRES_USER=jobbot
POSTGRES_PASSWORD=jobbot_password
POSTGRES_PORT=5432

# Database URL for application
DATABASE_URL=postgresql://jobbot:jobbot_password@localhost:5432/jobbot

# ======================
# Redis Configuration
# ======================
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379/0

# ======================
# Application Configuration
# ======================
ENVIRONMENT=development
API_PORT=8000
DASHBOARD_PORT=8080
RQ_DASHBOARD_PORT=9181

# ======================
# Job Bot Settings
# ======================
# File storage
ARTIFACT_DIR=./artifacts

# Email settings
GMAIL_CREDENTIALS_FILE=./config/configgmail_credentials.json

# Job scoring settings
MIN_SCORE_THRESHOLD=70
MAX_JOBS_PER_RUN=10

# Email rate limiting
EMAIL_DAILY_LIMIT=30
EMAIL_MIN_INTERVAL_MINUTES=2

# ======================
# Security Settings
# ======================
# Set to 'production' for production deployment
SECRET_KEY=your-secret-key-change-in-production
API_KEY_HEADER=X-API-Key

# ======================
# External Services
# ======================
# Gmail API (optional - for email functionality)
# GMAIL_CLIENT_ID=your-gmail-client-id
# GMAIL_CLIENT_SECRET=your-gmail-client-secret

# Webhook URLs (optional)
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# ======================
# Pipeline Configuration
# ======================
# Scheduling settings
SCHEDULE_ENABLED=true
SCHEDULE_INTERVAL_HOURS=2

# Source configuration
DEFAULT_SOURCES=greenhouse,lever,ashby
MAX_JOBS_PER_SOURCE=50

# Application settings
AUTO_APPLY_ENABLED=false
EMAIL_CONTACTS_ONLY=true
DRY_RUN_MODE=false

# ======================
# Logging Configuration
# ======================
LOG_LEVEL=INFO
LOG_FILE=./logs/jobbot.log

# ======================
# Development Settings
# ======================
# Set to true for development
DEBUG=false
RELOAD=true

# Testing settings
TEST_DATABASE_URL=sqlite:///test_jobbot.db
